<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.axxesinternational.vias.axxes.PendientesActivity"
    android:contentDescription="Texto"
    android:elevation="4dp"
    android:theme="@style/AppTheme"
    android:visibility="visible">


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/primary"
        android:layout_marginTop="29dp"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Folio"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/text_footer"
            android:layout_marginStart="26dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro"
            android:id="@+id/textView3"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView2"
            android:textColor="@color/text_footer"
            android:layout_marginStart="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Observaciones"
            android:id="@+id/textView4"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/text_footer"
            android:layout_marginEnd="26dp" />


    </RelativeLayout>

    <EditText
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText1"
        android:text="1001"
        android:layout_below="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout" />

    <EditText
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:text="29/12/2014"
        android:layout_below="@+id/linearLayout"
        android:layout_toEndOf="@+id/editText1" />

    <EditText
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:text="Cambio durmien.."
        android:layout_below="@+id/linearLayout"
        android:layout_toEndOf="@+id/editText2" />


    <EditText
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:text="1002"
        android:layout_below="@+id/editText1"
        android:layout_alignStart="@+id/linearLayout" />

    <EditText
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:text="29/12/2014"
        android:layout_below="@+id/editText2"
        android:layout_toEndOf="@+id/editText4" />

    <EditText
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText6"
        android:text="Cambio durmien.."
        android:layout_below="@+id/editText3"
        android:layout_toEndOf="@+id/editText5" />



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_dark"
        android:layout_marginBottom="0dp"
        android:padding="5dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/user_footer"
            android:textColor="@color/text_footer"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/image_logo" />


    </LinearLayout>



</RelativeLayout>
